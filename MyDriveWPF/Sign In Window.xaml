<Window x:Class="MyDriveWPF.Sign_In_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDriveWPF"
        mc:Ignorable="d"
        Title="Sign In Window" Height="300" Width="300">
    <Grid>
        <TextBlock Margin="42,25,133,224"><Run Text="Login"/></TextBlock>
        <TextBlock Margin="42,74,48,175"><Run Text="Password"/></TextBlock>
        <TextBox x:Name="loginBox" Width="150" Height="20" Margin="94,25,48,224"/>
        <PasswordBox x:Name="passwordBox" Width="150" Height="20" Margin="94,74,48,175"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="59,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Registration" HorizontalAlignment="Left" Margin="169,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBlock Margin="42,120,48,129"><Run Text="Role"/></TextBlock>
        <ComboBox x:Name="roleBox" Width="150" Height="20" Margin="94,120,48,129">
            <TextBlock>Simple User</TextBlock>
            <TextBlock>Extra User</TextBlock>
        </ComboBox>

    </Grid>
</Window>
